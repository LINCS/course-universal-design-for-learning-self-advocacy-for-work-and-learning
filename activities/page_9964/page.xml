    <content>&lt;p dir="ltr" style="text-align: left;"&gt;&lt;/p&gt;&lt;div&gt;&lt;p xml:lang="EN-US" lang="EN-US" paraid="0" paraeid="{216866d7-7cb0-4b1d-9f78-1d97868a2e0d}{153}" data-ccp-props="{&amp;quot;335551550&amp;quot;:1,&amp;quot;335551620&amp;quot;:1,&amp;quot;335559683&amp;quot;:0,&amp;quot;335559685&amp;quot;:10,&amp;quot;335559731&amp;quot;:0,&amp;quot;335559737&amp;quot;:0,&amp;quot;335562764&amp;quot;:2,&amp;quot;335562765&amp;quot;:1.13999,&amp;quot;335562766&amp;quot;:4,&amp;quot;335562767&amp;quot;:0,&amp;quot;335562768&amp;quot;:4,&amp;quot;335562769&amp;quot;:6}"&gt;&lt;span data-usefontface="false" data-contrast="none" xml:lang="EN-US" lang="EN-US"&gt;&lt;strong&gt;Start with a complete draft of a rubric in a Google Doc&lt;/strong&gt;&lt;/span&gt;​&lt;/p&gt;&lt;/div&gt;&lt;ul role="list"&gt;&lt;li data-aria-posinset="1" role="listitem" data-aria-level="1"&gt;&lt;p xml:lang="EN-US" lang="EN-US" paraid="0" paraeid="{216866d7-7cb0-4b1d-9f78-1d97868a2e0d}{156}" data-ccp-props="{&amp;quot;335551550&amp;quot;:1,&amp;quot;335551620&amp;quot;:1,&amp;quot;335559683&amp;quot;:0,&amp;quot;335559685&amp;quot;:240,&amp;quot;335559731&amp;quot;:-230,&amp;quot;335559737&amp;quot;:0,&amp;quot;335562764&amp;quot;:2,&amp;quot;335562765&amp;quot;:1.13999,&amp;quot;335562766&amp;quot;:4,&amp;quot;335562767&amp;quot;:0,&amp;quot;335562768&amp;quot;:4,&amp;quot;335562769&amp;quot;:6}"&gt;&lt;span data-usefontface="false" data-contrast="none" xml:lang="EN-US" lang="EN-US"&gt;Invite suggestions for changes&lt;/span&gt;​&lt;/p&gt;&lt;/li&gt;&lt;li data-aria-posinset="2" role="listitem" data-aria-level="1"&gt;&lt;p xml:lang="EN-US" lang="EN-US" paraid="0" paraeid="{216866d7-7cb0-4b1d-9f78-1d97868a2e0d}{159}" data-ccp-props="{&amp;quot;335551550&amp;quot;:1,&amp;quot;335551620&amp;quot;:1,&amp;quot;335559683&amp;quot;:0,&amp;quot;335559685&amp;quot;:240,&amp;quot;335559731&amp;quot;:-230,&amp;quot;335559737&amp;quot;:0,&amp;quot;335562764&amp;quot;:2,&amp;quot;335562765&amp;quot;:1.13999,&amp;quot;335562766&amp;quot;:4,&amp;quot;335562767&amp;quot;:0,&amp;quot;335562768&amp;quot;:4,&amp;quot;335562769&amp;quot;:6}"&gt;&lt;span data-usefontface="false" data-contrast="none" xml:lang="EN-US" lang="EN-US"&gt;Model how to ask clarifying questions&lt;/span&gt;​&lt;/p&gt;&lt;/li&gt;&lt;/ul&gt;&lt;div&gt;&lt;p xml:lang="EN-US" lang="EN-US" paraid="0" paraeid="{216866d7-7cb0-4b1d-9f78-1d97868a2e0d}{162}" data-ccp-props="{&amp;quot;335551550&amp;quot;:1,&amp;quot;335551620&amp;quot;:1,&amp;quot;335559683&amp;quot;:0,&amp;quot;335559685&amp;quot;:10,&amp;quot;335559731&amp;quot;:0,&amp;quot;335559737&amp;quot;:0,&amp;quot;335562764&amp;quot;:2,&amp;quot;335562765&amp;quot;:1.13999,&amp;quot;335562766&amp;quot;:4,&amp;quot;335562767&amp;quot;:0,&amp;quot;335562768&amp;quot;:4,&amp;quot;335562769&amp;quot;:6}"&gt;&lt;span data-usefontface="false" data-contrast="none" xml:lang="EN-US" lang="EN-US"&gt;&lt;strong&gt;Start with a partial draft of a rubric in a Google Doc&lt;/strong&gt;&lt;/span&gt;​&lt;/p&gt;&lt;/div&gt;&lt;ul role="list"&gt;&lt;li data-aria-posinset="3" role="listitem" data-aria-level="1"&gt;&lt;p xml:lang="EN-US" lang="EN-US" paraid="0" paraeid="{216866d7-7cb0-4b1d-9f78-1d97868a2e0d}{165}" data-ccp-props="{&amp;quot;335551550&amp;quot;:1,&amp;quot;335551620&amp;quot;:1,&amp;quot;335559683&amp;quot;:0,&amp;quot;335559685&amp;quot;:240,&amp;quot;335559731&amp;quot;:-230,&amp;quot;335559737&amp;quot;:0,&amp;quot;335562764&amp;quot;:2,&amp;quot;335562765&amp;quot;:1.13999,&amp;quot;335562766&amp;quot;:4,&amp;quot;335562767&amp;quot;:0,&amp;quot;335562768&amp;quot;:4,&amp;quot;335562769&amp;quot;:6}"&gt;&lt;span data-usefontface="false" data-contrast="none" xml:lang="EN-US" lang="EN-US"&gt;Invite learners to write requirements for scores with missing descriptors&lt;/span&gt;​&lt;/p&gt;&lt;/li&gt;&lt;li data-aria-posinset="4" role="listitem" data-aria-level="1"&gt;&lt;p xml:lang="EN-US" lang="EN-US" paraid="0" paraeid="{216866d7-7cb0-4b